source "https://rubygems.org"

# Jekyll and GitHub Pages dependencies
gem "jekyll", "~> 4.3.0"
gem "minima", "~> 2.5" # Matches the theme specified in _config.yml

# Optional plugins for additional functionality
gem "jekyll-sitemap" # Generates a sitemap.xml
gem "jekyll-feed"    # Generates an RSS feed
gem "jekyll-seo-tag" # Adds SEO metadata to your site